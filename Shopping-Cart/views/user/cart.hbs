<section class="h-100 gradient-custom">
  <div class="container py-5">
    <div class="row">
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Summary</h5>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                Products Price
                
                 <span>{{value}}$</span>
                
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                Shipping
                <span>Free</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                <div>
                  <strong>Total amount</strong>
                  <strong>
                    <p class="mb-0">(including VAT)</p>
                  </strong>
                </div>
                <span><strong>{{value}}$</strong></span>
              </li>
            </ul>
      <a href="/checkout" class="btn btn-secondary btn-lg btn-block">Go to Checkout</a>
          </div>
        </div>
      </div>

      <div class="col-md-8">


        <div class="card border-0">
          <div class="card-header py-3 border">
            <h5 class="mb-0">Cart - {{cartCount}} items</h5>
          </div>
          {{#each products}}

          <div class="card-body">

            <!-- Single item -->
            <div class="row border-bottom mt-0">
              {{#each this.product}}
              <div class="col-lg-3 col-md-12 mb-4 mb-lg-4 pt-0">
                <!-- Image -->
              
                <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                  <img src="/product-images/{{this.imagepath}}.jpg" class="w-100" alt="image" />
              
                  <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                  </a>
                </div>
              
                <!-- Image -->
              </div>
              {{/each}}
              {{#each this.product}}
              <div class="col-lg-5 col-md-6 mb-4 mb-lg-0 mt-5">
                <!-- Data -->
                <h4><strong>{{this.name}}</strong></h4>
                <p><strong>{{this.price}}</strong></p>
                <p>{{this.description}}</p>
                <p></p>
                
                <!-- Data -->
              </div>
              {{/each}}

              <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <!-- Quantity -->

                <div class="form-outline">
                   <label class="form-label" for="form1">Quantity</label>
                  <input id="form1" name="quantity" value="{{this.quantity}}" 
                    class="form-control" />
                 
                </div>
                <a href="/remove-product/search?id={{this._id}}&proId={{this.item}}"><button class="btn btn-secondary mt-5">Remove Item</button> </a>
              </div>
              <!-- Quantity -->

            </div>


          </div>
          <!-- Single item -->

          {{/each}}





        </div>

      </div>
    </div>
</section>