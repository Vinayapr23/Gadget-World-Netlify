<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
    </div>
     <div class="table-responsive-lg">
        <table class="table mt-5">
          <thead>
            <tr>
            
              <th scope="col">Product Name</th>
              <th scope="col">Category</th>
              <th scope="col">Description</th>
              <th scope="col">Image</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete Product</th>

            </tr>
          </thead>
          <tbody>
            {{#each products}}
            <tr>
              
              <td scope="row">{{this.name}}</td>
              <td>{{this.category}}</td>
              <td>{{this.description}}</td>
              <td><img style="width:70px;height:50px" src="/product-images/{{this.imagepath}}.jpg" alt=""></td>
              <td><a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a></td>
              <td><a class="btn btn-danger" href="/admin/delete-product/{{this._id}}"
                  onclick="return confirm('Do you want to delete{{this.name}}?')">Delete</a></td>

            </tr>
            {{/each}}
          </tbody>
        </table>
     </div>

  </div>
</section>